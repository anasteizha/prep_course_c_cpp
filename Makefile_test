TARGET = ./test.out
HDRS_DIR = project/include

SRCS = project/src/test.c project/src/update_base.c project/src/output.c

.PHONY: all build rebuild check test memtest clean

all: clean check test memtest

$(TARGET): $(SRCS)
	$(CC) -Wpedantic -Wall -Wextra -Werror -I $(HDRS_DIR) -o $(TARGET) $(CFLAGS) $(SRCS)

build: $(TARGET)

rebuild: clean build

check:
	./linters/run.sh

clean:
	rm -rf $(TARGET) *.dat
